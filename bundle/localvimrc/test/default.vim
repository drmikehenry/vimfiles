" default setup localvimrc
let g:localvimrc_enable              = 1
let g:localvimrc_name                = [ ".lvimrc" ]
let g:localvimrc_event               = [ "BufWinEnter" ]
let g:localvimrc_reverse             = 0
let g:localvimrc_count               = -1
let g:localvimrc_file_directory_only = 0
let g:localvimrc_sandbox             = 1
let g:localvimrc_ask                 = 0
let g:localvimrc_persistent          = 1
let g:localvimrc_persistence_file    = expand("$HOME/.localvimrc_persistent")
let g:localvimrc_whitelist           = []
let g:localvimrc_blacklist           = []
let g:localvimrc_autocmd             = 1
let g:localvimrc_debug               = 0
